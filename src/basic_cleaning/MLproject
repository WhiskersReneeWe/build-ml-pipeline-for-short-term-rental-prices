name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: a raw csv file
        type: string

      output_artifact:
        description: a cleaned csv file
        type: string

      output_type:
        description: it should be a csv type
        type: string

      output_description:
        description:
        type: string

      min_price:
        description:
        type: float

      max_price:
        description:
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact} --output_type {output_type} \
        --output_description {output_description} --min_price {output_description} --max_price {max_price}
